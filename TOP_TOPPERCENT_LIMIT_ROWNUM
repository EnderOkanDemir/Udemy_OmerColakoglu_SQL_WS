MSSQL             : TOP
POSTGRESQL, MYSQL : LIMIT
ORACLE            : ROWNUM



SELECT * 
FROM CUSTOMER


SELECT TOP 5 CITY
FROM CUSTOMER


SELECT TOP 5 *
FROM CUSTOMER


SELECT TOP 5 *
FROM CUSTOMER
ORDER BY CUSTOMERNAME ASC



SELECT TOP 5 *
FROM CUSTOMER
ORDER BY CUSTOMERNAME DESC


SELECT TOP 10 *
FROM CUSTOMER
WHERE CITY = 'İSTANBUL'
ORDER BY AGE 


SELECT TOP 50 *
FROM CUSTOMER
WHERE CITY = 'İSTANBUL'
ORDER BY CUSTOMERNAME 


SELECT TOP 50 PERCENT *
FROM CUSTOMER
WHERE CITY = 'İSTANBUL'
ORDER BY CUSTOMERNAME 


SELECT TOP 50 PERCENT *
FROM CUSTOMER
