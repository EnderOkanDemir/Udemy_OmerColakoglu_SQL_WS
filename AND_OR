SELECT *
FROM CUSTOMER
WHERE CUSTOMERNAME LIKE 'SA%' AND CITY = 'İSTANBUL'


-- Being one of the conditions true is enough for the 'OR' command
-- One of the conditions being true is sufficient for the 'OR' command
SELECT *
FROM CUSTOMER
WHERE CUSTOMERNAME LIKE 'SAMİ%' OR CITY = 'İSTANBUL'

